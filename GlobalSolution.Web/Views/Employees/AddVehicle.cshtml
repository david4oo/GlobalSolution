@model GlobalSolution.Web.Models.VehicleViewModel


@{
    ViewData["Title"] = "AddVehicle";
}

<center>
    <h2>Create Vehicle</h2>
</center>


<div class="row">
    <div class="col-md-4">
        <form asp-action="AddVehicle">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="EmployeeId" />

            <div class="form-group">
                <label asp-for="VehicleTypeId" class="control-label"></label>
                <select asp-for="VehicleTypeId" asp-items="Model.VehicleTypes" class="form-control"></select>
                <span asp-validation-for="VehicleTypeId" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Placa" class="control-label"></label>
                <input asp-for="Placa" class="form-control" />
                <span asp-validation-for="Placa" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Modelo" class="control-label"></label>
                <input asp-for="Modelo" class="form-control" />
                <span asp-validation-for="Modelo" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Color" class="control-label"></label>
                <input asp-for="Color" class="form-control" />
                <span asp-validation-for="Color" class="text-danger"></span>
            </div>



            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-success" />
                <a asp-action="Details" asp-route-id="@Model.EmployeeId" class="btn btn-primary">Back </a>
            </div>
        </form>
    </div>
</div>

